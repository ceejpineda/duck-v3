    <a href="#"><img src="<%=message.user.profile_picture_url%>" alt="duck" class="w-10 h-10 rounded-full"></a>
  </div>
  <div class="ml-5">
    <div>
      <a href="#" class="font-semibold hover:underline"><%= message.user.first_name + " " + message.user.last_name %></a>

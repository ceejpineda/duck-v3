<div class="top-0 left-0 h-screen w-16 m-0 flex flex-col shadow-lg p-2 bg-base-100">
  <div class="sidebar-icon group bg-neutral-content">
    <div>
      <%= image_tag("duck.png", :alt => "rss feed") %>
    </div>
  </div>
  <div class="border-b border-gray-700 mx-3 mt-2"></div>
  <% @rooms.each do |room| %>
    <div class="sidebar-icon group bg-primary text-base-100">
      <a href="/rooms/<%=room.id%>"><i class="fa-solid fa-<%=room.icon%> fa-2xl"></i></a>
      <span class="sidebar-tooltip group-hover:scale-100"><%= room.name %></span>
    </div>
  <% end %>
  <div class="sidebar-icon group">
    <label for="my-modal" class="fa-solid fa-circle-plus fa-2xl hover:cursor-pointer"></label>
      <span class="sidebar-tooltip group-hover:scale-100">Add new Room</span>
  </div>
</div>
<%= render 'partials/add_modal' %>